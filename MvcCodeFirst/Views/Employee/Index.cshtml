@model IEnumerable<MvcCodeFirst.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalEx)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsAvaiable)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Picpath)
        </th>
        <th>@Html.DisplayName("Picture")</th>
        <th>@Html.DisplayName("Action")</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalEx)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsAvaiable)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Picpath)
        </td>
        <td>
            <div style="height:80px; width=60px">
                <img src="@Url.Content(item.Picpath)" height="80px" width="80px" />
            </div>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
